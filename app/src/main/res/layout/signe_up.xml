<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="회원가입"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/social_idint2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:background="@drawable/login_box"
                android:hint="아이디"
                android:padding="10dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="233dp" />

            <Button
                android:id="@+id/check"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_button"
                android:text="중복체크"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이미 존재하는 아이디입니다!"
                    android:textSize="10dp"
                    android:layout_marginRight="75dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textColor="#FF0000"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/textViewok"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginRight="75dp"
                    android:layout_marginBottom="10dp"
                    android:text="사용 가능한 아이디입니다!"
                    android:textColor="#0000FF"
                    android:textSize="10dp" />

            </FrameLayout>

        </LinearLayout>

        <EditText
            android:layout_gravity="center"
            android:id="@+id/social_homeint2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_box"
            android:hint="사는 곳"
            android:padding="10dp"
            android:layout_marginBottom="40dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="233dp" />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/social_favoritint2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_box"
            android:hint="자주가는곳"
            android:padding="10dp"
            android:layout_marginBottom="100dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="233dp" />


        <Button
            android:id="@+id/signeup_dialog"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button"
            android:text="회원가입"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>